<!DOCTYPE html>
<html lang="en">
    <head>
        {{ template "head.tmpl" }}
        <link rel="stylesheet" href="/static/css/overrides/login.css">
        <title>Login</title>
    </head>
    <body>
        <div class="wrapper-page animated fadeInDown">
            <div class="text-center">
                <img src="/static/img/cns-logo.png" alt="CNS Truck Licensing Logo"/>
            </div>
            <br>
            <div class="panel panel-color">
                <form class="form-horizontal m-t-10" method="post" action="/login/{{ .company.Slug }}">
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" placeholder="Username" name="email">
                        </div>
                    </div>
                    <div class="form-group ">

                        <div class="col-xs-12">
                            <input class="form-control" type="password" placeholder="Password" name="password">
                        </div>
                    </div>

                    <div class="col-xs-7">
                        <a href="/recoverpw"><i class="fa fa-lock m-r-5"></i> Forgot your password?</a>
                    </div>
                    <div class="form-group text-right">
                        <div class="col-xs-5">
                            <button class="btn btn-purple w-md" type="submit">Log In</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        {{ template "scripts.tmpl" . }}

    </body>
</html>
