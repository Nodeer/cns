<!DOCTYPE html>
<html lang="en">
    <head>
        {{ template "head.tmpl" . }}

        <!--Morris Chart CSS -->
        <link rel="stylesheet" href="/static/morris/morris.css">

        <!-- DataTables -->
        <link href="/static/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
        <link rel="stylesheet" href="/static/datatables/custom.css" charset="utf-8">

        <title>All Drivers</title>

    </head>

    <body>

        {{ template "side-nav.tmpl" . }}

        <!--Main Content Start -->
        <section class="content">

            {{ template "nav.tmpl" . }}

            <div class="wraper container-fluid">
                <div class="page-title clearfix">
                    <div class="col-lg-3">
                        <h3 class="title">Drivers</h3>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <table id="drivers" class="table table-bordered table-hover" style="background-color:white;">
                            <thead>
                                <tr id="search">
                                    <th></th>
                                    <th>name</th>
                                    <th>email</th>
                                    <th>phone</th>
                                </tr>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{ range $driver := .drivers }}
                                    <tr id="{{ $driver.Id }}" class="clickable" data-url="/driver/{{ $driver.Id }}">
                                        <td>{{ $driver.Id }}</td>
                                        <td>{{ $driver.FirstName }} {{ $driver.LastName }}</td>
                                        <td>{{ $driver.Email }}</td>
                                        <td>{{ $driver.Phone }}</td>
                                    </tr>
                                {{ end }}
                            </tbody>
                        </table>
                    </div>
                </div>

            </div> <!-- END Wraper -->

            {{ template "footer.tmpl" . }}

        </section>

        {{ template "scripts.tmpl" . }}

        <script src="/static/datatables/jquery.dataTables.min.js"></script>
        <script src="/static/datatables/dataTables.bootstrap.js"></script>
        <script src="/static/datatables/custom.js" charset="utf-8"></script>

        <script type="text/javascript">
            $(document).ready(function() {
                var table = $('#drivers').DataTable({
                    lengthMenu:[10,15,20],
                    "columnDefs": [
                        { "orderable": false, "targets": [3] },
                        { "name": "email",   "targets": 2 },
                        { "name": "name",  "targets": 1 },
                        { "name": "phone",   "targets": 3 },
                    ]
                });

                $('#drivers tr#search th').each( function () {
                    var title = $(this).text();
                    if (title != '') {
                        $(this).html('<input id="search" data-column="' + title + '" type="text"/>');
                    }
                });

                $('input#search').keyup(function() {
                    var name = $(this).attr('data-column');
                    var column = table.column(name + ':name');
                    if (column.search() !== this.value ) {
                        column.search(this.value).draw();
                    }
                });
            } );
        </script>

    </body>
</html>
