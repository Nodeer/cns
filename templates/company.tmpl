    <body>

        {{ template "side-nav.tmpl" . }}

        <!--Main Content Start -->
        <section class="content">

            {{ template "nav.tmpl" . }}

            <div class="wraper container-fluid">
                <div class="row">
                    <div class="col-sm-12">

                        <p class="lead">
                            Customer: {{ if .company.Id}}{{ .company.Name }}{{ else }}NEW{{ end }}
                        </p>

                        <div class="panel panel-default p-0">
                            <div class="panel-body p-0">
                                <ul class="nav nav-tabs profile-tabs">
                                    <li class="active"><a class="tab" >Customer Center</a></li>
                                    <li class=""><a class="tab"  href="/cns/company/{{ .company.Id }}/service">Service</a></li>
                                    <li class=""><a class="tab"  href="/cns/company/{{ .company.Id }}/vehicle">Vehicles</a></li>
                                    <li class=""><a class="tab"  href="/cns/company/{{ .company.Id }}/driver">Drivers</a></li>
                                    <li class=""><a class="tab"  href="/cns/company/{{ .company.Id }}/form">Forms</a></li>
                                </ul>
                                <div class="tabPane clearfix">
                                    <div id="view"  class="profile-desk">
                                        <div class="row">
                                            <div id="infoPane" class="col-lg-6">
                                                <h1 class="clearfix">
                                                    {{ if .company.Id }}{{ .company.Name }}{{ else }}New{{ end }}
                                                    <button class="btn btn-primary btn-xs pull-right" id="editButton">Edit</button>
                                                </h1>
                                                <table class="table table-condensed" style="margin-bottom:0;">
                                                    <tbody>
                                                        <tr>
                                                            <td><b>DOT #</b></td>
                                                            <td>{{ .company.DOTNum }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td><b>Name</b></td>
                                                            <td>{{ .company.Name }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td><b>DBA</b></td>
                                                            <td>{{ .company.DBA }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td><b>Primary Contact</b></td>
                                                            <td>
                                                                {{ .company.ContactName }}<br>
                                                                {{ .company.ContactTitle }}<br>
                                                                {{ .company.ContactPhone }}
