<!DOCTYPE html>
<html lang="en">
    <head>

        {{ template "head.tmpl" . }}

        <!-- sweet alerts -->
        <link href="/static/sweet-alert/sweet-alert.min.css" rel="stylesheet">
        <!-- DataTables -->
        <link href="/static/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
        <title>Company</title>
    </head>
    <body>

        {{ template "side-nav.tmpl" . }}

        <style media="screen">
            tr#search input {
                width: 100%;
                padding: 3px;
                box-sizing: border-box;
            }

            tr#search th {
                padding-right: 8px;
            }
        </style>

        <!--Main Content Start -->
        <section class="content">

            {{ template "nav.tmpl" . }}

            <div class="wraper container-fluid">
                <div class="row m-t-30">
                    <div class="col-sm-12">
                        <div class="panel panel-default p-0">
                            <div class="panel-body p-0">
                                <ul class="nav nav-tabs profile-tabs">
                                    <li class="active"><a data-toggle="tab" href="#aboutme">Information</a></li>
                                    <li class=""><a data-toggle="tab" href="#driver">Drivers</a></li>
                                    <li class=""><a data-toggle="tab" href="#vehicle">Vehicles</a></li>
                                    <li class=""><a data-toggle="tab" href="#edit-profile">Settings</a></li>
                                </ul>
                                <div class="tab-content m-0">

                                    <div id="aboutme" class="tab-pane active">
                                        <div class="profile-desk">
                                            <h1>{{ .company.Name }}</h1>
                                            <table class="table table-condensed">
                                                <tbody>
                                                    <tr>
                                                        <td><b>Contact Name</b></td>
                                                        <td>{{ .company.Contact }}</td>
                                                    </tr>
                                                    <tr>
                                                        <td><b>Contact Email</b></td>
                                                        <td>{{ .company.Email }}</a>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td><b>Phone</b></td>
                                                        <td>(123)-456-7890</td>
                                                    </tr>
                                                    <tr>
                                                        <td><b>Address</b></td>
                                                        <td>{{ .company.AddrHTML }}</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                    <div id="driver" class="tab-pane">
                                        <table id="drivers" class="table table-bordered table-hover" style="background-color:white;">
                                            <thead>
                                                <tr id="search">
                                                    <th></th>
                                                    <th>name</th>
                                                    <th>email</th>
                                                    <th>phone</th>
                                                </tr>
                                                <tr>
                                                    <th>Id</th>
                                                    <th>Name</th>
                                                    <th>Email</th>
                                                    <th>Phone</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{ range $driver := .drivers }}
                                                    <tr id="{{ $driver.Id }}" class="contact" style="cursor:pointer;">
                                                        <td>{{ $driver.Id }}</td>
                                                        <td>{{ $driver.FirstName }}{{ $driver.LastName }}</td>
                                                        <td>{{ $driver.Email }}</td>
                                                        <td>{{ $driver.Phone }}</td>
                                                    </tr>
                                                {{ end }}
                                            </tbody>
                                        </table>
                                    </div>

                                    <div id="vehicle" class="tab-pane">

                                    </div>

                                    <div id="edit-profile" class="tab-pane">
                                        <div class="user-profile-content">
                                            <form role="form">
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label for="FullName">Name</label>
                                                            <input type="text" value="{{ .company.Name }}" id="FullName" class="form-control">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="FullName">Contact Name</label>
                                                            <input type="text" value="{{ .company.Contact }}" id="FullName" class="form-control">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="Email">Contact Email</label>
                                                            <input type="email" value="{{ .company.Email }}" id="Email" class="form-control">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="Email">Phone</label>
                                                            <input type="email" value="{{ .company.Phone }}" id="Email" class="form-control">
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label for="FullName">Street</label>
                                                            <input type="text" value="{{ .company.Street }}" id="FullName" class="form-control">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="FullName">City</label>
                                                            <input type="text" value="{{ .company.City }}" id="FullName" class="form-control">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="Email">State</label>
                                                            <input type="email" value="{{ .company.State }}" id="Email" class="form-control">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="Email">Zip</label>
                                                            <input type="email" value="{{ .company.Zip }}" id="Email" class="form-control">
                                                        </div>
                                                    </div>
                                                </div>
                                                <button class="btn btn-primary" type="submit">Save</button>
                                            </form>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{ template "footer.tmpl" . }}

        </section>
        <!-- Main Content Ends -->

        {{ template "scripts.tmpl" . }}

        <script src="/static/js/jquery.scrollTo.min.js"></script>
        <script src="/static/datatables/jquery.dataTables.min.js"></script>
        <script src="/static/datatables/dataTables.bootstrap.js"></script>

        <script type="text/javascript">
            $(document).ready(function() {
                var table = $('#drivers').DataTable({
                    lengthMenu:[10,15,20],
                    "columnDefs": [
                        { "orderable": false, "targets": [3] },
                        { "name": "email",   "targets": 2 },
                        { "name": "name",  "targets": 1 },
                        { "name": "phone",   "targets": 3 },
                    ]
                });

                $('#drivers tr#search th').each( function () {
                    var title = $(this).text();
                    if (title != '') {
                        $(this).html('<input id="search" data-column="' + title + '" type="text"/>');
                    }
                });

                $('input#search').keyup(function() {
                    var name = $(this).attr('data-column');
                    var column = table.column(name + ':name');
                    if (column.search() !== this.value ) {
                        column.search(this.value).draw();
                    }
                });

                $('.contact').click(function() {
                    window.location.href = '/driver/' + this.id;
                });
            });
        </script>

  </body>
</html>
