                                                            <td>{{ .company.PhysicalAddress.AddrHTML }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td><b>Mailing Address</b></td>
                                                            <td>{{ .company.MailingAddress.AddrHTML }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td><b>Business Type</b></td>
