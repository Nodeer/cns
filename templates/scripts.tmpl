{{ if not .comment }}
	<script type="text/javascript">
		$(document).ready(function() {
			href = $('#comment').attr('href') + window.location.pathname + '&page=' + document.title;
			$('#comment').attr('href', href);
		});
	</script>
{{ end }}
<script type="text/javascript">
	$('#collapse').click(function() {
		$.ajax({
			url: "/collapse",
			type: "GET",
			success:function(resp) {
				if (resp.error) {
					console.log('error');
					return
				}
				console.log('success');
			},
			error: function(e, e2) {
				console.log(e2);
			}
		})
	});
</script>
