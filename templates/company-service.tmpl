<!DOCTYPE html>
<html lang="en">
    <head>

        {{ template "head.tmpl" . }}

        <!-- sweet alerts -->
        <link href="/static/sweet-alert/sweet-alert.min.css" rel="stylesheet">
        <style media="screen">
            label.radio-label {
                width:20px;
            }
        </style>
        <title>Customer</title>
    </head>
    <body>

        {{ template "side-nav.tmpl" . }}

        <!--Main Content Start -->
        <section class="content">

            {{ template "nav.tmpl" . }}

            <div class="wraper container-fluid">
                <div class="row">
                    <div class="col-sm-12">

                        <p class="lead">
                            Company: {{ if .company.Id}}{{ .company.Name }}{{ else }}NEW{{ end }}
                        </p>

                        <div class="panel panel-default p-0">
                            <div class="panel-body p-0">
                                <ul class="nav nav-tabs profile-tabs">
                                    <li class=""><a id="infoTab" href="/cns/company/{{ .company.Id }}">Customer Center</a></li>
                                    <li class="active"><a id="serviceTab">Service</a></li>
                                    <li class=""><a id="vehiclesTab" href="/cns/company/{{ .company.Id }}/vehicle" >Vehicles</a></li>
                                    <li class=""><a id="notesTab" href="/cns/company/{{ .company.Id }}/driver">Drivers</a></li>
                                    <li class=""><a class="tab"  href="/cns/company/{{ .company.Id }}/form">Forms</a></li>
                                </ul>

                                <div class="tabPane clearfix">
                                    <div class="profile-desk">
                                        <div class="col-lg-3">

                                            <div class="form-group">
                                                <label>Apportion</label><br>
                                                <div class="radio-inline">
                                                    <label class="cr-styled" for="apportionTrue">
                                                        <input type="radio" id="apportionTrue" name="apportion" value="true">
                                                        <i class="fa"></i>
                                                        Yes
                                                    </label>
                                                </div>
                                                <div class="radio-inline">
                                                    <label class="cr-styled" for="apportionFalse">
                                                        <input type="radio" id="apportionFalse" name="apportion" value="false" checked>
                                                        <i class="fa"></i>
                                                        No
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <input type="text" class="form-control datepicker" name="" value="" placeholder="Apportion Date 1">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <input type="text" class="form-control datepicker" name="" value="" placeholder="Apportion Date 2">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label>Fuel Tax Program</label><br>
                                                <div class="radio-inline">
                                                    <label class="cr-styled" for="fuelTaxTrue">
                                                        <input type="radio" id="fuelTaxTrue" name="fuelTax" value="true">
                                                        <i class="fa"></i>
                                                        Yes
                                                    </label>
                                                </div>
                                                <div class="radio-inline">
                                                    <label class="cr-styled" for="fuelTaxFalse">
                                                        <input type="radio" id="fuelTaxFalse" name="fuelTax" value="false" checked>
                                                        <i class="fa"></i>
                                                        No
                                                    </label>
                                                </div>
                                                <br>
                                                <label class="radio-label">NY</label>
                                                <div class="radio-inline">
                                                    <label class="cr-styled" for="fuelTaxNYTrue">
                                                        <input type="radio" id="fuelTaxNYTrue" name="fuelTaxNY" value="true">
                                                        <i class="fa"></i>
                                                        Yes
                                                    </label>
                                                </div>
                                                <div class="radio-inline">
                                                    <label class="cr-styled" for="fuelTaxNYFalse">
                                                        <input type="radio" id="fuelTaxNYFalse" name="fuelTaxNY" value="false" checked>
                                                        <i class="fa"></i>
                                                        No
                                                    </label>
                                                </div>
                                                <br>
                                                <label class="radio-label">KY</label>
                                                <div class="radio-inline">
                                                    <label class="cr-styled" for="fuelTaxKYTrue">
                                                        <input type="radio" id="fuelTaxKYTrue" name="fuelTaxKY" value="true">
                                                        <i class="fa"></i>
                                                        Yes
                                                    </label>
                                                </div>
                                                <div class="radio-inline">
                                                    <label class="cr-styled" for="fuelTaxKYFalse">
                                                        <input type="radio" id="fuelTaxKYFalse" name="fuelTaxKY" value="false" checked>
                                                        <i class="fa"></i>
                                                        No
