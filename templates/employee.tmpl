<!DOCTYPE html>
<html lang="en">
    <head>

        {{ template "head.tmpl" . }}

        <!-- sweet alerts -->
        <link href="/static/sweet-alert/sweet-alert.min.css" rel="stylesheet">

    </head>

    <body>

        {{ template "side-nav.tmpl" . }}

        <!--Main Content Start -->
        <section class="content">

            {{ template "nav.tmpl" . }}

            <div class="wraper container-fluid">
                <div class="row">
                    <div class="col-sm-12">

                        <p class="lead">
                            Employee: {{ if .employee.Id }}{{ .employee.FirstName }} {{ .employee.LastName }}{{ else }}NEW{{ end }}
                        </p>

                        <div class="panel panel-default p-0">
                            <div class="panel-body p-0">
                                <ul class="nav nav-tabs profile-tabs">
                                    <li class="active"><a id="infoTab" data-toggle="tab" href="#infoPane">About Me</a></li>
                                    <li class=""><a id="settingsTab" data-toggle="tab" href="#settingsPane">Settings</a></li>
                                </ul>

                                <div class="tab-content m-0">

                                    <div id="infoPane" class="tab-pane active">
                                        <div class="profile-desk">
                                            <h1>{{ .employee.FirstName}} {{ .employee.LastName }}</h1>

                                            <table class="table table-condensed">
                                                <tbody>
                                                    <tr>
                                                        <td><b>Email</b></td>
                                                        <td>{{ .employee.Email }}</td>
                                                    </tr>
                                                    <tr>
                                                        <td><b>Phone</b></td>
                                                        <td>{{ .employee.Phone }}</td>
                                                    </tr>
                                                    <tr>
                                                        <td><b>Address</b></td>
                                                        <td>{{ .employee.AddrHTML }}</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                    <div id="settingsPane" class="tab-pane">
                                        <div class="user-profile-content">
                                            <form role="form" action="/cns/employee" method="post">
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label>First Name</label>
                                                            <input type="text" value="{{ .employee.FirstName }}" name="firstName" class="form-control">
                                                        </div>
                                                        <div class="form-group">
                                                            <label>Last Name</label>
                                                            <input type="text" value="{{ .employee.LastName }}" name="lastName" class="form-control">
                                                        </div>
                                                        <div class="form-group">
                                                            <label>Email</label>
                                                            <input type="email" value="{{ .employee.Email }}" name="auth.Email" class="form-control">
                                                        </div>
                                                        <div class="form-group">
                                                            <label>Phone</label>
                                                            <input type="text" value="{{ .employee.Phone }}" name="phone" class="form-control">
                                                        </div>
                                                        <button class="btn btn-primary" type="submit">Save</button>
                                                    </form>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>Street</label>
                                                        <input type="text" value="{{ .employee.Street }}" name="address.Street" class="form-control">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>City</label>
                                                        <input type="text" value="{{ .employee.City }}" name="address.City" class="form-control">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>State</label>
                                                        <input type="text" value="{{ .employee.State }}" name="address.State" class="form-control">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Zip</label>
                                                        <input type="text" value="{{ .employee.Zip }}" name="address.Zip" class="form-control">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Home Page</label>
                                                        <select class="form-control" name="home">
                                                            <option {{ if eq .employee.Home "/cns/company" }}selected {{ end }}value="/cns/company">Company</option>
                                                            <option {{ if eq .employee.Home "/cns/employee" }}selected {{ end }}value="/cns/employee">Employee</option>
                                                            <option {{ if eq .employee.Home "/cns/driver" }}selected {{ end }}value="/cns/driver">Driver</option>
                                                            <option {{ if eq .employee.Home "/cns/calendar" }}selected {{ end }}value="/cns/calendar">Calendar</option>
                                                        </select>
                                                    </div>
                                                    <input type="hidden" name="id" value="{{ .employee.Id }}">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{ template "footer.tmpl" . }}

        </section>
        <!-- Main Content Ends -->

        {{ template "scripts.tmpl" . }}
        <script src="/static/js/jquery.scrollTo.min.js"></script>

        {{ if not .employee.Id}}
            <script type="text/javascript">
                $('a#settingsTab').tab('show');
            </script>
        {{ end }}


    </body>
</html>
