<!DOCTYPE html>
<html lang="en">
    <head>

        {{ template "head.tmpl" . }}

        <!--Morris Chart CSS -->
        <link rel="stylesheet" href="/static/morris/morris.css">
        <!-- DataTables -->
        <link href="/static/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
        <link rel="stylesheet" href="/static/datatables/custom.css" charset="utf-8">

    </head>

    <body>

        {{ template "side-nav.tmpl" . }}

        <!--Main Content Start -->
        <section class="content">

            {{ template "nav.tmpl" . }}

            <div class="wraper container-fluid">
                <div class="row">
                    <div class="col-lg-12">

                        <p class="lead">
                            Companies
                        </p>

                        <table id="companies" class="table table-bordered table-hover" style="background-color:white;">
                            <thead>
                                <tr class="search">
                                    <th></th>
                                    <th>name</th>
                                    <th>contact</th>
                                    <th>email</th>
                                    <th>phone</th>
                                </tr>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Contact</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{ range $company := .companies }}
                                    <tr id="{{ $company.Id }}" class="clickable" data-url="/company/{{ $company.Id }}">
                                        <td>{{ $company.Id }}</td>
                                        <td>{{ $company.Name }}</td>
                                        <td>{{ $company.Contact }}</td>
                                        <td>{{ $company.Email }}</td>
                                        <td>{{ $company.Phone }}</td>
                                    </tr>
                                {{ end }}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            {{ template "footer.tmpl" . }}

        </section>

        {{ template "scripts.tmpl" . }}

        <script src="/static/datatables/jquery.dataTables.min.js"></script>
        <script src="/static/datatables/dataTables.bootstrap.js"></script>
        <script src="/static/datatables/custom.js" charset="utf-8"></script>

        <script type="text/javascript">
            $(document).ready(function() {
                var table = $('#companies').DataTable({
                    lengthMenu:[10,15,20],
                    "columnDefs": [
                        { "orderable": false, "targets": [3] },
                        { "name": "name",   "targets": 1 },
                        { "name": "contact","targets": 2 },
                        { "name": "email",  "targets": 3 },
                        { "name": "phone",  "targets": 4 },
                    ]
                });

                $('#companies tr.search th').each( function () {
                    var title = $(this).text();
                    if (title != '') {
                        $(this).html('<input id="search" data-column="' + title + '" type="text"/>');
                    }
                } );

                $('input#search').keyup(function() {
                    var name = $(this).attr('data-column');
                    var column = table.column(name + ':name');
                    if (column.search() !== this.value ) {
                        column.search(this.value).draw();
                    }
                });
            } );
        </script>

    </body>
</html>
